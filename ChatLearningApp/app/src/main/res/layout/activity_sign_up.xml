<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMain"
    android:paddingRight="50dp"
    android:paddingLeft="50dp"
    android:layout_weight="1"
    tools:context="ttuananhle.android.chatlearningapp.activity.SignUpActivity">

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <ImageView
           android:layout_marginTop="54dp"
           android:src="@mipmap/boxchat_logo"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:inputType="textEmailAddress"/>

       <android.support.design.widget.TextInputLayout
           android:layout_marginTop="22dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <android.support.design.widget.TextInputEditText
               android:id="@+id/edtSignUpName"
               android:hint="Name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />

       </android.support.design.widget.TextInputLayout>

       <android.support.design.widget.TextInputLayout
           android:layout_marginTop="22dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <android.support.design.widget.TextInputEditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/edtSignUpEmail"
               android:hint="Email" />
       </android.support.design.widget.TextInputLayout>

       <android.support.design.widget.TextInputLayout
           android:layout_marginTop="22dp"
           app:passwordToggleEnabled="true"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <android.support.design.widget.TextInputEditText
               android:id="@+id/edtSignUpPassword"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Password"
               android:inputType="textPassword" />
       </android.support.design.widget.TextInputLayout>

       <RadioGroup
           android:layout_marginTop="22dp"
           android:id="@+id/rbGroup"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <RadioButton
               android:id="@+id/rbTeacher"
               android:text="Teacher"
               android:layout_weight="1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <RadioButton
               android:id="@+id/rbStudent"
               android:layout_weight="1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Student"
               />
       </RadioGroup>

       <Button
           android:id="@+id/btnSignUp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="26dp"
           android:background="@color/colorPrimaryDark"
           android:text="Sign Up" />
   </LinearLayout>


    <TextView
        android:id="@+id/txtToSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:text="Already a member? Sign In"
        android:textColor="#FFFFFF" />

</RelativeLayout>
