<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMain"
    android:orientation="vertical"
    android:paddingRight="50dp"
    android:paddingLeft="50dp"
    android:layout_weight="1"
    tools:context="ttuananhle.android.chatlearningapp.SignUpActivity">

    <ImageView
        android:layout_marginTop="64dp"
        android:src="@mipmap/boxchat_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/edtSignUpName"
        android:hint="Name"
        android:layout_marginTop="64dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtSignUpEmail"
        android:hint="Email"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/edtSignUpPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/colorPrimaryDark"
        android:text="Sign Up" />

    <TextView
        android:id="@+id/txtToSignIn"
        android:clickable="true"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:text="Already a member? Sign In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
