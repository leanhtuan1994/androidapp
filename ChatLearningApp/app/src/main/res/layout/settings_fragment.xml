<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="bottom"
        android:background="#263238"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <ImageView
            android:clickable="true"
            android:id="@+id/img_setting_user_profile"
            android:paddingTop="16dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_person_black_24px" />

        <TextView
            android:id="@+id/txt_setting_user_name"
            android:text="Tuan Anh Le"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/txt_setting_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:textColor="#FFF"
            android:text="tuananhleptithcm@gmail.com"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_setting_fragment"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>



</LinearLayout>